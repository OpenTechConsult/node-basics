doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="/css/product.css")
        title Document
    body
        header.main-header 
            nav.main-header__nav 
                ul.main-header__item-list 
                    li.main-header__item 
                        a.active(href="/") Shop
                    li.main-header__item 
                        a(href="/admin/add-product") Add Product
        
        main 
            .grid
                each product in prods 
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.product}
                        .card__image
                            img(src="https://www.packtpub.com/media/catalog/product/cache/abd628df6af33f734d56624223a191f5/9/7/9781801077361-original_55.png")
                        .card__content
                            h2.product__price $5.99
                            p.product__description C# 10 and .NET 6 â€“ Modern Cross-Platform... 
                        .card__actions
                            button.btn Add to Cart