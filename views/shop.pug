extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")
    
block content
    main 
        if prods.length > 0
            .grid
                each product in prods 
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.product}
                        .card__image
                            img(src="https://www.packtpub.com/media/catalog/product/cache/abd628df6af33f734d56624223a191f5/9/7/9781801077361-original_55.png")
                        .card__content
                            h2.product__price $5.99
                            p.product__description C# 10 and .NET 6 â€“ Modern Cross-Platform... 
                        .card__actions
                            button.btn Add to Cart
        else 
            h1 No Products